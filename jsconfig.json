{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"],
      "@contexts/*": ["contexts/*"],
      "@assets/*": ["assets/*"],
      "@config/*": ["config/*"],
      "@i18n/*": ["i18n/*"]
    }
  },
  "exclude": ["node_modules", "build", "dist"]
}
